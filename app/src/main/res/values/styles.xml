<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="OverlayPrimaryColorRed">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/dark_red</item>
    </style>

    <style name="OverlayPrimaryColorGreen">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/dark_green</item>
    </style>

    <style name="OverlayPrimaryColorAmber">
        <item name="colorPrimary">@color/amber</item>
        <item name="colorPrimaryDark">@color/dark_amber</item>
    </style>

    <style name="OverlayPrimaryColorOrange">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/dark_orange</item>
    </style>

    <style name="OverlayPrimaryColorBrown">
        <item name="colorPrimary">@color/brown</item>
        <item name="colorPrimaryDark">@color/dark_brown</item>
    </style>

    <style name="OverlayPrimaryColorBlue">
        <item name="colorPrimary">@color/violet</item>
        <item name="colorPrimaryDark">@color/dark_violet</item>
    </style>

    <style name="OverlayPrimaryColorBlack">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
    </style>

</resources>
